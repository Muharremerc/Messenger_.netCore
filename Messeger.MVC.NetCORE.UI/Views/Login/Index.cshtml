@model LoginPostModel

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <title>Dashio - Bootstrap Admin Template</title>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/style-responsive.css" rel="stylesheet" />
    <link href="~/Content/img/apple-touch-icon.png" rel="icon"/>
    <link href="~/Content/img/favicon.png"  rel="apple-touch-icon"/>
    <link href="~/Content/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Favicons -->
    <style>
        body {
            background-image: url(https://netresim.com/bilesenler/dosya/dosyalar/image/galeriler/03.09.2018/bresim/su-ve-doganin-guzelligi-muhtesem-manzara.jpg);           
        }
    </style>
