@model Messeger.MVC.NetCORE.UI.Models.Api.Message
@{
    ViewData["Title"] = "Create";
}

<section class="wrapper">
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i>  Message Create</h4>
                <form class="form-horizontal style-form" novalidate method="post" asp-action="Create">
                    
                    <div class="form-group">
                        <label asp-for="Header" class="col-sm-2 col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Header" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc" class="col-sm-2 col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Desc" class="form-control">
                            <span asp-validation-for="Desc" class="help-block"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-theme">Create </button>
                </form>
            </div>
        </div>
        <!-- col-lg-12-->
    </div>
</section>